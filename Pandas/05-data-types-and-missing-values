### Load the data
import pandas as pd
reviews = pd.read_csv("../input/wine-reviews/winemag-data-130k-v2.csv", index_col=0)
pd.set_option('max_rows', 5)

### Get the data type for the 'price' column
reviews.price.dtype
>dtype('float64')

### Get data types for all columns
reviews.dtype
>country        object
